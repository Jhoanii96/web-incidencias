{
    "version": 2,
    "builds": [
        {
            "src": "index.php",
            "use": "vercel-php@0.3.6"
        },
        {
            "src": "src/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.php"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/src/$1/$2/$3"
        }
    ]
}